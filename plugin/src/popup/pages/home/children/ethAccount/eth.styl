.layout-eth
    width: 360px
    height: 510px
    text-align: center
    background: #f7f7fa;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.05);
    .nav
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 16px;
        .nav-left
            display: flex;
            justify-content: flex-start;
            align-items: center;
            div
                font-size: 16px;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                padding: 0 10px;
                user-select: none;
    .eth-list
        height: 445px;
        overflow-y: auto;
        padding: 0px 16px 16px;
        .eth-add
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.05);
            padding: 16px;
            margin-top: 8px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            .eth-add-left
                display: flex;
                justify-content: flex-start;
                align-items: center;
