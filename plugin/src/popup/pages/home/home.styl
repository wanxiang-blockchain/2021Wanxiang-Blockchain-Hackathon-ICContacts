.layout-home
    width: 360px
    height: 510px
    text-align: center
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.05);

.section-one
    position relative;
    background: linear-gradient(to right bottom, #29acde, #f67d2e, #902282);
    color: #FFFFFF;
    .bg
        width: 360px;
        height: 190px;
    .lock
        position: absolute;
        right:10px;
        top: 20px;
        .lockStyle 
            font-size: 20px;
            color: #FFFFFF;
    .avt
        width: 90px;
        height: 90px;
        border-radius: 50%;
        position absolute;
        top: 75px
        left: 20px;
        .icon
            width: 90px;
            height: 90px;
            background: #FFFFFF;
            border-radius: 50%;
    .static
        display: flex;
        justify-content: flex-start;
        position absolute;
        top: 115px;
        right: 10px;
        .data
            color: #FFFFFF;
            margin-left: 10px;
    .switch
        position absolute;
        right: 10px;
        top: 46px;
    .address, .dfinityIdentify
        display: flex;
        justify-content: flex-start;
        position absolute;
        right: 10px;
        .data
            color: #FFFFFF;
            margin-left: 10px;
    .address
        top: 112px;
    .dfinityIdentify
        top: 135px;
    .chainList
        position: absolute;
        right:10px;
        top: 160px;
        height: 30px;
        display: flex;
        justify-content: flex-end;
        .iconStyle {
            margin-left: 10px;
            font-size: 20px;
            // color: #9e9e9e;
        }
    .info
        margin-top: 50px; 
        padding-left: 20px;
        text-align: left;

.section-two
    margin: 10px;
    .ant-tabs
        .ant-tabs-tab
            color: rgba(0, 0, 0, 0.85);
            margin: 0 8px;
            padding: 12px 6px;
            .ant-tabs-tab-btn
                z-index: 200;
            .ant-tabs-tab-btn:active, .ant-tabs-tab-btn:focus
                color: initial;
        .ant-tabs-tab:hover
            color: initial;
        .ant-tabs-tab.ant-tabs-tab-active
            color: rgba(0, 0, 0, 0);
            .ant-tabs-tab-btn
                background: transparent;
                color: initial;
    .ant-tabs-ink-bar
        z-index: 100;
        background: #a5d8ef;
    .ant-tabs-top > .ant-tabs-nav .ant-tabs-ink-bar, .ant-tabs-top > div > .ant-tabs-nav .ant-tabs-ink-bar
        bottom: 10px;
    .ant-tabs-top > .ant-tabs-nav .ant-tabs-ink-bar, .ant-tabs-bottom > .ant-tabs-nav .ant-tabs-ink-bar, .ant-tabs-top > div > .ant-tabs-nav .ant-tabs-ink-bar, .ant-tabs-bottom > div > .ant-tabs-nav .ant-tabs-ink-bar
        height: 12px;
        border-radius: 18px;
    .ant-tabs-top > .ant-tabs-nav .ant-tabs-ink-bar-animated, .ant-tabs-bottom > .ant-tabs-nav .ant-tabs-ink-bar-animated, .ant-tabs-top > div > .ant-tabs-nav .ant-tabs-ink-bar-animated, .ant-tabs-bottom > div > .ant-tabs-nav .ant-tabs-ink-bar-animated
        transition-timing-function: ease, cubic-bezier(0.68, -0.6, 0.32, 1.3), cubic-bezier(0.68, -0.6, 0.32, 1.3);
        transition-duration: 0.3s, 0.6s, 0.6s;
